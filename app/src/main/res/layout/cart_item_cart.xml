<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="0dp"
        app:strokeColor="#eee"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/image_cartitemcard"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:paddingVertical="6dp"
                android:scaleType="centerInside"
                app:cornerRadius="8dp"
                tools:contentDescription="Apple Macbook Air 2020"
                tools:src="@drawable/laptop_1_1" />

            <TextView
                android:id="@+id/text_cartitemcard_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:layout_marginLeft="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/Team42.Headline3"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="Apple Macbook Air" />

            <TextView
                android:id="@+id/text_cartitemcard_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:textSize="12sp"
                tools:text="$2299" />

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>