<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Applying Theme Styles  -->
    <style name="Theme.Team42" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/brand_black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/brand_gray</item>
        <item name="android:colorBackground">@color/background_color</item>

        <item name="buttonStyle">@style/Team42.Button</item>
        <item name="bottomNavigationStyle">@style/Team42.BottomNavigation</item>
        <item name="textInputFilledDenseStyle">@style/Team42.SearchBar</item>

        <item name="textAppearanceHeadline1">@style/Team42.Headline1</item>
        <item name="textAppearanceHeadline2">@style/Team42.Headline2</item>
        <item name="textAppearanceHeadline3">@style/Team42.Headline3</item>
        <item name="textAppearanceBody1">@style/Team42.Body1</item>

        <item name="android:windowActivityTransitions">true</item>
    </style>
    <style name="Theme.Team42.Dialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/Team42.DialogTitle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/Team42.DialogBody</item>
        <item name="buttonBarPositiveButtonStyle">@style/Team42.DialogButton</item>
        <item name="buttonBarNegativeButtonStyle">@style/Team42.DialogButton</item>
    </style>

    <!--  General Styles  -->
    <style name="Team42LayoutContainer">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">28dp</item>
    </style>
    <style name="Team42PageSmallHeading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!--  Widget Theming  -->
    <style name="Team42.DialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Team42.DialogBody" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/brand_light_gray</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>
    <style name="Team42.DialogButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="Team42.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/brand_black</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="Team42.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="colorPrimary">@color/white</item>
        <item name="backgroundTint">@color/brand_black</item>
    </style>
    <style name="Team42.SearchBar" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="startIconContentDescription">@string/search_icon_description</item>
        <item name="startIconDrawable">@drawable/ic_search</item>
        <item name="endIconMode">clear_text</item>
        <item name="boxCornerRadiusBottomStart">@dimen/card_corner_radius</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/card_corner_radius</item>
        <item name="boxCornerRadiusTopStart">@dimen/card_corner_radius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/card_corner_radius</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>
    <style name="Team42.BackButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="iconSize">32dp</item>
        <item name="iconTint">@color/brand_gray</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="icon">@drawable/ic_chevron_left</item>
    </style>
    <style name="Team42.IconButton" parent="Widget.MaterialComponents.Button">
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>
    <style name="Team42.CategoryChip" parent="Widget.MaterialComponents.Chip.Action">
        <item name="android:textSize">11sp</item>
        <item name="android:checkable">false</item>
        <item name="chipIconSize">12dp</item>
        <item name="chipMinHeight">22dp</item>
        <item name="iconStartPadding">6dp</item>
        <item name="chipMinTouchTargetSize">0dp</item>
    </style>

    <!--  Typography Theming  -->
    <style name="Team42.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>
    <style name="Team42.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>
    <style name="Team42.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
    <style name="Team42.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
    <style name="Team42.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/brand_black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:lineSpacingMultiplier">1.75</item>
    </style>
    <style name="Team42.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/brand_black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:lineSpacingMultiplier">1.75</item>
    </style>
</resources>