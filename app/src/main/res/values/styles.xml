<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--  Applying Theme Styles  -->
    <style name="Theme.Team42" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/brand_black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/brand_gray</item>
        <item name="android:colorBackground">#f5f5f7</item>

        <item name="buttonStyle">@style/Team42.Button</item>
        <item name="bottomNavigationStyle">@style/Team42.BottomNavigation</item>

        <item name="textAppearanceHeadline1">@style/Team42.Headline1</item>
        <item name="textAppearanceHeadline2">@style/Team42.Headline2</item>
        <item name="textAppearanceHeadline3">@style/Team42.Headline3</item>
        <item name="textAppearanceBody1">@style/Team42.Body1</item>
    </style>

    <!--  Layout Styles  -->
    <style name="Team42LayoutContainer">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">20dp</item>
    </style>

    <!--  Widget Theming  -->
    <style name="Team42.Button" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/brand_black</item>
    </style>
    <style name="Team42.BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="colorPrimary">@color/white</item>
        <item name="backgroundTint">@color/brand_black</item>
    </style>

    <!--  Typography Theming  -->
    <style name="Team42.Headline1" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">@font/inter</item>
    </style>
    <style name="Team42.Headline2" parent="TextAppearance.MaterialComponents.Headline2">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:lineSpacingMultiplier">1.25</item>
    </style>
    <style name="Team42.Headline3" parent="TextAppearance.MaterialComponents.Headline3">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
    <style name="Team42.Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
    <style name="Team42.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/brand_black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:lineSpacingMultiplier">1.5</item>
    </style>
</resources>